<odoo>
    <record id="view_form_toolhead" model="ir.ui.view">
        <field name="name">Toolhead form</field>
        <field name="model">lynxter.toolhead</field>
        <field name="arch" type="xml">
            <form string="toolhead">
                <sheet>
                    <group name="group_line_1">
                        <group name="group_column_left">
                            <field name="name"/>
                            <field name="type"/>
                            <field name="serial_number"/>
                        </group>
                    
                        <group name="group_column_right">
                            <field name="printer_id" widget="many2one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_list_toolhead" model="ir.ui.view">
        <field name="name">Toolhead list</field>
        <field name="model">lynxter.toolhead</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="serial_number"/>
                <field name="printer_id"/>
            </list>
        </field>

    </record>
    <record id="view_search_toolhead" model="ir.ui.view">
        <field name="name">Toolhead Filter</field>
        <field name="model">lynxter.toolhead</field>
        <field name="arch" type="xml">
            <search>
                <field name="type"/>
            </search>
        </field>

    </record>
</odoo>