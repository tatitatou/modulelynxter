<odoo>
    <record id="view_form_printer" model="ir.ui.view">
        <field name="name">Printer form</field>
        <field name="model">lynxter.printer</field>
        <field name="arch" type="xml">
            <form string="printer">
                <header>
                    <button name="button_check_sending_date" type="object"
                        string="Check dates"></button>
                </header>
                <sheet>
                    <group name="group_line_1">
                        <group name="group_column_left">
                            <field name="model"/>
                            <field name="active"/>
                            <field name="manufacture_date"/>
                            <field name="sending_date"/>
                            <field name="location"/>
                            <field name="serial_number" invisible='state != "usable"'/>
                            <field name="state" widget="statubar" statubar_visible="broken, repaired, usable"/>
                        </group>
                    
                        <group name="group_column_right">
                            <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_list_printer" model="ir.ui.view">
        <field name="name">Printer list</field>
        <field name="model">lynxter.printer</field>
        <field name="arch" type="xml">
            <list>
                <field name="model"/>
                <field name="serial_number"/>
                <field name="state"/>
                <field name="manufacture_date"/>
                <field name="thumbnail" widget="image" options='{"size": [150, 140]}'/>
            </list>
        </field>

    </record>
    <record id="view_search_printer" model="ir.ui.view">
        <field name="name">Printer Filter</field>
        <field name="model">lynxter.printer</field>
        <field name="arch" type="xml">
            <search>
                <field name="model"/>
                <filter name="filter_inactive" string="Inactive"
                        domain="[('active','=',False)]"/>
                <filter name="filter_active" string="Active"
                        domain="[('active','=',True)]"/>
            </search>
        </field>

    </record>
</odoo>